%header{ class:"bg-white shadow" }
  %div{ class:"max-w-8xl mx-auto py-6 px-4 sm:px-6 lg:px-8" }
    %div{ class: "flex items-center justify-between h-16" }
      %h1{ class:"text-3xl font-bold text-gray-900" } Transaction History 

%main
  %div{ class:"max-w-8xl mx-auto py-6 sm:px-6 lg:px-8" }
    %div{ class:"flex flex-col" }
      %div{ class:"-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8" }
        %div{ class:"py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8" }
          %div{ class:"shadow overflow-hidden border-b border-gray-200 sm:rounded-lg" }
            %table{ class:"min-w-full divide-y divide-gray-200" }
              %thead{ class:"bg-gray-50" }
                %tr
                  %th{ scope:"col", class:"px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" }
                    Time
                  %th{ scope:"col", class:"px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider" }
                    Method
                  %th{ scope:"col", class:"px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider" }
                    Coin
                  %th{ scope:"col", class:"px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider" }
                    Price
                  %th{ scope:"col", class:"px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider" }
                    Amount
                  %th{ scope:"col", class:"px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider" }
                    Total Price
                  %th{ scope:"col", class:"px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider" }
                    Fee
                  %th{ scope:"col", class:"px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider" }
                    Final Price
                  %th{ scope:"col", class:"px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider" }
                    Currency
                  %th{ scope:"col", class:"px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider" }
                    Status
                  
              %tbody{ class:"bg-white divide-y divide-gray-200" }
                - if @transactions
                  - @transactions.each do |transaction|
                    %tr
                      %td{ class:"px-6 py-4 whitespace-nowrap" }
                        %div{ class:"text-sm text-left text-gray-900" }
                          = transaction.created_at
                      
                      %td{ class:"px-6 py-4 whitespace-nowrap" }
                        %div{ class:"text-sm text-center text-gray-900" }
                          = transaction.kind

                      %td{ class:"px-6 py-4 whitespace-nowrap" }
                        %div{ class:"text-sm text-center text-gray-900" }
                          = transaction.symbol

                      %td{ class:"px-6 py-4 whitespace-nowrap" }
                        %div{ class:"text-sm text-right text-gray-900" }
                          = number_to_currency(transaction.unit_price)
                      
                      %td{ class:"px-6 py-4 whitespace-nowrap" }
                        %div{ class:"text-sm text-right text-gray-900" }
                          = transaction.amount

                      %td{ class:"px-6 py-4 whitespace-nowrap" }
                        %div{ class:"text-sm text-right text-gray-900" }
                          = number_to_currency(transaction.total_price)

                      %td{ class:"px-6 py-4 whitespace-nowrap" }
                        %div{ class:"text-sm text-right text-gray-900" }
                          = number_to_currency(transaction.fee)

                      %td{ class:"px-6 py-4 whitespace-nowrap" }
                        %div{ class:"text-sm text-right text-gray-900" }
                          = number_to_currency(transaction.final_price)

                      %td{ class:"px-6 py-4 whitespace-nowrap" }
                        %div{ class:"text-sm text-center text-gray-900" }
                          = transaction.currency

                      %td{ class:"px-6 py-4 whitespace-nowrap" }
                        %div{ class:"text-sm text-center text-gray-900" }
                          = transaction.status
                          