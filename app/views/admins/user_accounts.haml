%header{ class:"bg-white shadow" }
  %div{ class:"max-w-8xl mx-auto py-6 px-4 sm:px-6 lg:px-8" }
    %div{ class: "flex items-center justify-between h-16" }
      %h1{ class:"text-3xl font-bold text-gray-900" } User Accounts
      %div{ class:"hidden md:block" }
        = link_to "Add New User", admins_add_user_path, class:"bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"

%main
  %div{ class:"max-w-6xl mx-auto py-6 sm:px-6 lg:px-8" }
    %div{ class:"flex flex-col" }
      %div{ class:"-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8" }
        %div{ class:"py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8" }
          %div{ class:"shadow overflow-hidden border-b border-gray-200 sm:rounded-lg" }
            %table{ class:"min-w-full divide-y divide-gray-200" }
              %thead{ class:"bg-gray-50" }
                %tr
                  %th{ scope:"col", class:"px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" }
                    First name
                  %th{ scope:"col", class:"px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" }
                    Last name
                  %th{ scope:"col", class:"px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" }
                    Email
                  %th{ scope:"col", class:"px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" }
                    Country
                  %th{ scope:"col", class:"px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" }
                    Approved?
                  %th{ scope:"col", class:"px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" }
                    Action

              %tbody{ class:"bg-white divide-y divide-gray-200" }
                - @users.each do |user|
                  %tr
                    %td{ class:"px-6 py-4 whitespace-nowrap" }
                      %div{ class:"text-sm text-left text-gray-900" }
                        = user.firstname
                    
                    %td{ class:"px-6 py-4 whitespace-nowrap" }
                      %div{ class:"text-sm text-left text-gray-900" }
                        = user.lastname

                    %td{ class:"px-6 py-4 whitespace-nowrap" }
                      %div{ class:"text-sm text-left text-gray-900" }
                        = user.email

                    %td{ class:"px-6 py-4 whitespace-nowrap" }
                      %div{ class:"text-sm text-left text-gray-900" }
                        = user.country

                    %td{ class:"px-6 py-4 whitespace-nowrap" }
                      %div{ class:"text-sm text-left text-gray-900" }
                        = user.approved == true ? "Approved" : "Not yet approved"

                    %td{ class:"px-6 py-4 whitespace-nowrap" }
                      %div{ class:"text-sm text-left text-gray-900" }
                        = link_to "View", user_profile_path(:id => user.id)